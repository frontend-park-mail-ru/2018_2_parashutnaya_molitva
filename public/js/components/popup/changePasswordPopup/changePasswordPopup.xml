<fest:template xmlns:fest="http://fest.mail.ru" context_name="params">
    <div class="popup hidden js-change-pass-popup">
        <div class="popup__content change-pass__content">
            <div class="popup__content-block change-pass__content-block">
                <div class="popup__title change-pass__title">Change password</div>
                <form name="password-form" class="password-form js-password-form">
                    <input type="password" name="password" class="input signin__input" id="password-pass" placeholder="New password"
                           autocomplete="autocomplete" autofocus="true"/>
                    <div class="warning change-pass__warning hidden js-warning-password"></div>
                    <input class="button submit singnin__submit js-button-submit" type="submit" name="submit" value="Submit"/>
                </form>
            </div>

            <div class="button popup__x-mark game-options__x-mark js-change-password-x-mark">
                <div class="x-mark-image"></div>
            </div>
        </div>
    </div>
</fest:template>
