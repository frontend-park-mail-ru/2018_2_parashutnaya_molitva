<fest:template xmlns:fest="http://fest.mail.ru" context_name="params">
    <div class="user-bar header-bar__profile">
        <div class="user-info user-bar__column">
            <div class="user-info__row text-h2">
                <fest:value>params.user.login</fest:value>
            </div>
            <div class="user-info__row js-header-score text-base">
                <fest:value>params.user.score</fest:value>
            </div>
        </div>
        <div class="user-info__column">
            <img class="user-info__avatar js-second-avatar"></img>
        </div>
    </div>
</fest:template>