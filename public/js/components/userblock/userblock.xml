<fest:template xmlns:fest="http://fest.mail.ru" context_name="params">
    <fest:choose>
        <fest:when test="params.isFirst === true">
            <div class="user-block">
                <div class="user-block__element user-info">
                    <div class="user-info__color-figure user-info__color-figure_white"></div>
                    <div class="user-info__color-text">WHITE</div>
                </div>
                <div class="user-block__element user-timer js-timer-first"></div>
                <div class="user-block__element js-figures-white"></div>
            </div>
        </fest:when>
        <fest:otherwise>
            <div class="user-block user-block_flipped">
                <div class="user-block__element user-info">
                    <div class="user-info__color-text">BLACK</div>
                    <div class="user-info__color-figure user-info__color-figure_black user-info__color-figure_flipped">
                    </div>
                </div>
                <div class="user-block__element user-timer js-timer-second"></div>
                <div class="user-block__element js-figures-black"></div>
            </div>
        </fest:otherwise>
    </fest:choose>
</fest:template>