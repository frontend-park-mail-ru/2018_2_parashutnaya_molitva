<fest:template xmlns:fest="http://fest.mail.ru" context_name="params">
    <div class="game">
        <aside class="info-block info-block_first hidden js-first">
            <button class="button submit text-h2 js-surrender-first">Surrender</button>
        </aside>
        <section class="board-section hidden js-board-section">
        </section>
        <aside class="info-block info-block_second hidden js-second">
        </aside>
        <fest:include src="../../components/popup/game-option-popup.xml"/>
        <div class="js-promotion-popup-container"></div>
        <div class="popup js-winner-popup hidden">
            <div class="popup__content winner__content">
                <div class="popup__content-block winner">
                    <div class="popup__title winner__text hidden js-win">Win</div>
                    <div class="user-block__element user-info js-win hidden">
                        <div class="winner__text text-h2 js-new-score-win"></div>
                    </div>
                    <div class="popup__title winner__text js-lose hidden ">Lose</div>
                    <div class="user-block__element user-info js-lose hidden">
                        <div class="winner__text text-h2 js-new-score-lose"></div>
                    </div>
                </div>
                <div class="button popup__x-mark game-options__x-mark js-menu-back-x-mark">
                    <div draggable="false" class="x-mark-image"></div>
                </div>
            </div>
        </div>
        <div class="popup hidden js-waiting-popup">
            <div class="popup__content waiting__content">
                <div class="popup__content-block winner">
                    <div class="popup__title waiting__title winner__text js-waiting-title">Waiting for opponent</div>
                    <div class="loader-ring js-loader"><div></div><div></div><div></div><div></div></div>
                </div>
                <div class="button popup__x-mark game-options__x-mark js-menu-back-x-mark">
                    <div draggable="false" class="x-mark-image"></div>
                </div>
            </div>
        </div>
    </div>
</fest:template>