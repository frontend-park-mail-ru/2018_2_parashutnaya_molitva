<fest:template xmlns:fest="http://fest.mail.ru" context_name="params">
    <div class="signup">
        <form class="signup__form" novalidate="novalidate">

            <label for="email">Email</label>
            <input class="signup__input" type="email" name="email" id="email"/>
            <div class="signup__warning signup__warning-hidden"></div>

            <label for="password">Password</label>
            <input class="signup__input" type="password" name="password" id="password"/>
            <div class="signup__warning signup__warning-hidden"></div>

            <label for="password-repeat">Repeat password</label>
            <input class="signup__input" type="password" name="password-repeat" id="password-repeat"/>
            <div class="signup__warning signup__warning-hidden"></div>

            <input class="signup__submit" type="submit" name="submit" value="sign up">
        </form>
    </div>
</fest:template>