<fest:template xmlns:fest="http://fest.mail.ru" context_name="params">
    <div class="profile section">
        <form class="profile__avatar-form">
        <div class="avatar-and-change-button">
            <img src="{params.sharedData.currentUser.image}" class="avatar-and-change-button__avatar"/>

            <div class="">
                <button class="" type="button">Select img</button>
                <input class="file-upload-button__input" type="file" name="file"/>
            </div>
        </div>
        </form>

        <label for="email">Email</label>
        <input class="input profile__input" type="email" name="email" id="email" autocomplete="autocomplete"
               autofocus="true" placeholder="Email"/>
        <div class="warning signup__warning hidden"></div>

        <label for="password">Password</label>
        <input class="input profile__input" type="password" name="password" id="password" autocomplete="autocomplete"
               placeholder="Password"/>
        <div class="warning profile__warning hidden"></div>

    </div>
</fest:template>